{

  "manifest_version": 2,
  "name": "URL to QR code",
  "description": "Converts the tab URL to QR code.",
  "author": "Saeed Moghadam",
  "version": "0.8",
  "icons": {
    "32": "data/images.png"
  },

  "browser_action": {
    "browser_style": false,
    "default_icon": "data/images.png",
    "default_title" : "URL to QR code",
    "default_popup": "data/index.html"
  },

  "permissions": ["activeTab"]

}
